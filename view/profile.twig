                        </figure>
                    </div>
                </div>
                <div class="column is-two-thirds">
                    <div class="content">
                        <div class="title">
                            {{ user.name }}
                        </div>
                        <div class="subtitle">
                            {{ user.year }} ー {{ user.course }}
                        </div>
                        <table class="table is-striped">
                            <thead>受賞や行事参加</thead>
                            <tbody>
                                {% for item in user.accomplishments %}
                                    <tr>
                                        <td>{{item}}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
