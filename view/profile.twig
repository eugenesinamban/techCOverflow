{% extends "template.twig" %}

{% block main %}
    <section class="section">
        <div class="container">
            <div class="field">
                <div class="control">
                    <a href="../index.php" class="button">
                        <span class="icon is-large">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                    </a>
                </div>
            </div>
            <div class="columns">
                <div class="column is-one-third">
                    <div class="box">
                        <figure class="image is-3by4">
